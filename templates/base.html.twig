<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav>
    <ul>
        <li>
            <a href="{{ path('homepage') }}">
                Homepage
            </a>
        </li>
        <li>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_logout') }}">
                    Logout
                </a>
            {% else %}
                <a href="{{ path('app_login') }}">
                    Login
                </a>
            {% endif %}
        </li>
    </ul>
</nav>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
